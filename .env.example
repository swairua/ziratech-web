# Environment variables for deployment
# Copy this to .env on the server and set real secrets

# Backend / DB
DB_HOST=localhost
DB_USER=mazaoplu_ziraweb
DB_PASS=REPLACE_WITH_DB_PASSWORD
DB_NAME=mazaoplu_ziraweb

# Admin token used to authorize schema changes and sign upload URLs
ADMIN_TOKEN=REPLACE_WITH_LONG_RANDOM_SECRET

# Allowed CORS origins (comma-separated). For production set to your domain only.
ALLOWED_ORIGINS=https://zira-tech.com

# Base URL used to generate absolute file URLs
BASE_URL=https://zira-tech.com

# Frontend -> API
# In production this can be /api.php (relative) or the absolute URL to api.php
VITE_API_URL=/api.php

# During local dev, if PHP runs on another port, set this for vite proxy
VITE_DEV_PHP_URL=http://localhost:8000
